@{
    ViewData["Title"] = "Reviews";
}

@model restauranter.Models.Review

@foreach (var review in ViewBag.Reviews)
{
    <h3>Review for: @review.Restaurant</h3>
    @if (review.Stars == 1)
    {
        <h2>1 Star</h2>
    }
    else
    {
        <h2>@review.Stars Stars</h2>
    }
    <dl>
        <dt>Reviewer: @review.Reviewer, @review.VisitedAt.ToString("MMMM d, yyyy")</dt>
        <dd>@review.ReviewText</dd>
        <dd>I found this review:
            <a asp-controller="Review" asp-action="Helpful" asp-route-ReviewId="@review.ReviewId"><button>Helpful</button></a>
            <a asp-controller="Review" asp-action="Unhelpful" asp-route-ReviewId="@review.ReviewId"><button>Unhelpful</button></a> 
        </dd>
    </dl>
    <h5>@review.Helpful people found this review helpful. @review.Unhelpful people found this review unhelpful.</h5>
    <hr>
}